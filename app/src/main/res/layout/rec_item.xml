<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="@dimen/RVCardViewItemMargin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/carimg"
            android:layout_width="@dimen/RVImageWidth"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/RVImageTextSpace">
            <TextView
                android:id="@+id/brand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:paddingLeft="@dimen/textViewPaddingLeft"
                android:paddingBottom="@dimen/textViewPaddingBottom"
                android:text="td"
                android:textSize="@dimen/RVBrandTextSize"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:paddingLeft="@dimen/textViewPaddingLeft"
                android:paddingBottom="@dimen/textViewPaddingBottom"
                android:text="td"/>
            <TextView
                android:id="@+id/isUsed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:paddingLeft="@dimen/textViewPaddingLeft"
                android:paddingBottom="@dimen/textViewPaddingBottom"
                android:textStyle="italic"
                android:text="td"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>